<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <app.pivo.android.prosdkdemo.camera.AutoFitTextureView
            android:id="@+id/texture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <app.pivo.android.prosdkdemo.camera.GraphicOverlay
            app:layout_constraintStart_toStartOf="@id/texture"
            app:layout_constraintEnd_toEndOf="@id/texture"
            app:layout_constraintTop_toTopOf="@id/texture"
            app:layout_constraintBottom_toBottomOf="@id/texture"
            android:id="@+id/tracking_graphic_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <RelativeLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/control_background">

        <HorizontalScrollView
            android:id="@+id/scroll_toggle_btn_tracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_btn_tracking"
                android:layout_width="wrap_content"
                app:checkedButton="@+id/none_tr"
                app:singleSelection="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/none_tr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/face_tr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Face"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/action_tr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Object"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/person_tr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Person"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/horse_tr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horse"
                    style="?attr/materialButtonOutlinedStyle"
                    />

            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll_toggle_btn_tracking"
            android:layout_centerHorizontal="true">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_btn_sensitivity"
                android:layout_width="wrap_content"
                app:checkedButton="@+id/normal_sen"
                app:singleSelection="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/none_sen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/slower_sen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slower"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/slow_sen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slow"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/normal_sen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    style="?attr/materialButtonOutlinedStyle"
                    />
                <Button
                    android:id="@+id/fast_sen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast"
                    style="?attr/materialButtonOutlinedStyle"
                    />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </HorizontalScrollView>

    </RelativeLayout>

    <ImageButton
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/switch_camera_view"
        android:background="@color/transparent"
        android:src="@mipmap/ic_flip_camera"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>